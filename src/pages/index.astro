---
import Layout from '../layouts/Layout.astro';
import A from '../components/A.vue';
import B from '../components/B.vue';
---

<Layout title="Welcome to Astro.">
	<main>
		<A client:load/>
		<br />
		<B client:load/>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
</style>
